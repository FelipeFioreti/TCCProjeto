@model IEnumerable<Pessoa>

@{
    ViewData["Title"] = "Página Inicial";
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/css/datatables.min.css rel="stylesheet">

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <main>
        <h1 class="mb-5">Página Inicial</h1>

    <table class="table pt-3 mb-3" id="table-pessoas" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pontos)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pontos)
            </td>
            <td>
                <a class="ms-2 me-2" asp-action="Adicionar" asp-route-id="@item.Id">Adicionar Pontos</a>
                <a class="ms-2 me-2" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a class="ms-2 me-2" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a class="ms-2 me-2" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
    }
        </tbody>
    </table>
    <a asp-area="" asp-controller="Home" asp-action="Index">Volta a Home Page</a>
    </main>
<script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
<script src="~/vendor/aos/aos.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/glightbox/js/glightbox.min.js"></script>
<script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="~/vendor/swiper/swiper-bundle.min.js"></script>
<script src="~/vendor/php-email-form/validate.js"></script>
<script src="~/js/datatables.min.js"></script>

<script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>

    <!-- Template Main JS File -->
<script src="~/js/site.js"></script>
</body>
</html>